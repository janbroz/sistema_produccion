<h1> Production orders </h1>

<p> For admin purposes </p>

<% @prodOrd.each do |order| %>
  <h2> Orden #:  <%= link_to order.id, order %></h2>
  <h3> Detalles </h3>
  <div class="prodInfo">


  <% if !order.materials.empty? %>
  <div class="tabletop">
    <table>
      <tr>
        <th> Nombre </th>
        <th> Referencia </th>
      </tr>
      <% (order.materials).each do |material| %>
      <tr>
        <td><%= material.name %></td>
        <td><%= material.reference %></td>
      </tr>
      <% end %>
    </table>
  </div>
  <% else %>
  <p> No details </p>
  <% end %>
  </div>

  <h3> Procesos asociados a la orden de produccion:</h3>
  <br />
  <% order.procesos.each do |pr| %>
  <div class="process_descr">
    <p> <b>Proceso:</b> <%= pr.numero_proceso %></p>
    <p> <b>Observaciones:</b> <%= pr.observaciones %></p>
  </div>
  <br />
  <% end %>

<% end %>
<br />
<%= link_to 'Nueva orden', "production_orders/new" %>
