<h1>Production Order Details</h1>

<h2> Estado: <%= @production_order.state %></h2>
<p> Referencia: <%= @production_order.order_reference %></p>


<% if !@production_order.production_order_details.empty? %>
<table>
  <tr>
    <th> Referencia </th>
    <th> Cantidad </th>
    <th> Descripcion </th>
  </tr>
  <% @pod.each do |detail| %>
  <tr>
    <td><%= detail.material.reference %></td>
    <td><%= detail.quantity %></td>
    <td> Here goes the material description </td>
  </tr>
  <% end %>
</table>
<% end %>

<% unless @production_order.state == "confirmed" %>
<div id="prodDet">
  <%= render 'detailForm' %>
</div>

<br />
<%= form_for @production_order do |t| %>
  <%= t.hidden_field :state, :value=>"confirmed" %>
  <%= t.submit "Confirm" %>
<% end %>

<% end %>

<br />

<%= form_for @plegado do |t| %>
  <%= t.label :distancia_plegado %>
  <%= t.text_field :distancia_plegado %>
  <br />
  <%= t.label :tiempo_montaje %>
  <%= t.text_field :tiempo_montaje %>
  <br />
  <%= t.hidden_field :production_order_id, :value => @production_order.id %>


  <%= t.submit "Nuevo Proceso" %>
<% end %>
